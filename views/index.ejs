<div ng-controller="LineCtrl">
    <div id="hero">
      <h1>Cold Review</h1>
      <input type="text" ng-model="repoUrl" placeholder="GitHub Repo URL">
      <button ng-click="githubRequest()" type="button">Go!</button>
    </div>
    <div id="line-chart">
      <canvas id="line-commits" class="chart chart-line" data="commitVolumes" labels="labels"  series="series" click="onClick" height="50">
      </canvas>
      <canvas id="line-temperatures" class="chart chart-line" data="temperatureValues" labels="labels"  series="series" click="onClick" height="50">
      </canvas>
      <button ng-click="updateFaster()" type="button">+</button>
      <button ng-click="updateSlower()" type="button">-</button>
    </div>
    <div id="commit-feed">
      <h4>Most Recent Commits</h4>
          <ul>
              <li ng-repeat="commit in commitList | limitTo: 10">
                  {{ commit.commit.committer.name }} : {{ commit.commit.message }} : {{ commit.idol.sentiment }}
              </li>
          </ul>
      </div>
    <div id="temp-settings">
      <h4>Temperature Settings</h4>
      <div id="container">
        <div class="temp-display">
          <h1>{{ set_temp }}&deg;</h1>
          Current
        </div><div class="temp-display">
          <h1>{{ ambient_temp}}&deg;</h1>
          Ambient
        </div><div class="temp-display">
          <h1>{{ max_temp }}&deg;</h1>
          Max
        </div>
      </div>
    </div>

</div>
